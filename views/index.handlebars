{{!-- image and title --}}
<h1>Eat De Burger </h1>
<img src="../img/burger.jog">

<body>
    <div class="container hidden">
        <div id="newBurgers" class="col-md-2 col-sm-2">
            {{!-- box display burgers --}}
            <ul>
                {{#each burgers}}
                <li>{{burger_name}}</li>
                {{/each}}
            </ul>
            {{!-- devour button --}}
            <button id="devourButton" type="submit" class="btn btn-success submit">Devour it!</button>
        </div>


        {{!-- box display devoured burgers --}}

        <div id="devouredBurgers" class="col-md-2 col-sm-2">
            {{!-- box display burgers --}}
            <ul>
                {{#each burgers }}
                <li>{{burger_name}}</li>
                {{/each}}
            </ul>
        </div>


        {{!-- Box to submit new burger --}}
        <div class="col-md-2 col-sm-2">
            <form id="addBurger">
                <div class="form-group">
                    <label for="burger-name">Enter Burger To Eat</label>
                    <select class="form-control" id="burger-name">
                    </select>
                </div>
                <br />
                <button type="submit" class="btn btn-success submit">Submit</button>
                <a class="btn btn-default">Submit</a>
            </form>
        </div>

    </div>
    </div>

</body>



<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.17.0/moment.min.js" type="text/javascript"></script>
